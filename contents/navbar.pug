nav(class="navbar navbar-inverse")
  div(class="container-fluid")
    div(class="navbar-header")
      button(type="button", class="navbar-toggle collapsed" data-toggle="collapse", data-target="#navbar", aria-expanded="false")
        span(class="sr-only") Toggle navigation
        span(class="icon-bar")
        span(class="icon-bar")
        span(class="icon-bar")
      a(class="navbar-brand", href=settings.adminUrl) #{settings.siteName} - Administration

    div(class="collapse navbar-collapse" id="navbar")
      ul(class="nav navbar-nav")
        each item in settings.sections
          if(item.children && item.children.length > 0)
            li
              a(href=item.getUrl(), class="dropdown-toggle", data-toggle="dropdown", role="buton", aria-haspopup="true", aria-expanded="false") #{item.title}
                span(class="caret")
              ul(class="dropdown-menu")
                each child in item.children
                  li
                    a(href=child.getUrl()) #{child.title}
                li(role="separator", class="divider")
                li
                  a(href=item.getUrl()) #{item.title}
          else
            li
              a(href=item.getUrl()) #{item.title}
      ul(class="nav navbar-nav navbar-right")
        li
          a(href=settings.adminUrl + "/settings", class="dropdown-toggle", data-toggle="dropdown", role="buton", aria-haspopup="true", aria-expanded="false") #{loggedUser.email}
            span(class="caret")
          ul(class="dropdown-menu")
            li
              a(href=settings.adminUrl + "/settings", ) Settings 
        li
          a(href=settings.adminUrl + "/login/logout") Logout